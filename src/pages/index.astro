---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import ModulosSection from '../components/ModulosSection.astro';
import RolesSection from '../components/RolesSection.astro';
import DescargaSection from '../components/DescargaSection.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

// Definir metadatos para SEO
const title = "Sistema de Gestión Administrativa Académica";
const description = "Optimiza las tareas administrativas en tu entorno académico con una interfaz intuitiva que facilita la planificación y gestión de recursos.";
---

<Layout title={title} description={description}>
  <main>
    <Header />
    <Hero />
    <ModulosSection />
    <RolesSection />
    <DescargaSection />
    <Footer />
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
    position: relative;
    background-color: #000;
  }
  
  /* Añadir pseudo-elementos para el efecto de fondo */
  main::before {
    content: '';
    position: fixed;
    inset: 0;
    background: radial-gradient(circle at 50% 50%, 
      rgba(25, 25, 112, 0.3) 0%, 
      rgba(0, 0, 128, 0.2) 40%, 
      rgba(0, 0, 139, 0.05) 80%, 
      rgba(0, 0, 0, 0) 100%);
    filter: blur(50px);
    opacity: 0.8;
    pointer-events: none;
    z-index: -1;
  }

  main::after {
    content: '';
    position: fixed;
    inset: 0;
    background: url('/noise.svg');
    opacity: 0.1;
    pointer-events: none;
    z-index: -1;
  }
</style>