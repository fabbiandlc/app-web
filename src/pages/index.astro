---
import Header from '../pages/Header.astro';
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
---

<Layout>
  <main
    class="flex flex-col min-h-screen w-full bg-[#000] text-white relative overflow-hidden"
  >
    <div
      class="absolute inset-0 bg-gradient-to-br from-gray-900 to-black opacity-90"
    ></div>
    <div
      class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-10"
    ></div>

    <Header />
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
  }
</style>